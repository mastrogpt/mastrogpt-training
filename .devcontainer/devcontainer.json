{
	"name": "MastroGPT Course",
	"dockerComposeFile": ["docker-compose.yml"],
	"service": "app",
	"workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
	"remoteUser": "node",
	"postCreateCommand": "ops -plugin https://gitub.com/mastrogpt/olaris-ai ; ops ai lesson",
	"customizations": {
		"vscode": {
			"extensions": [
				"pgant.antonio-ops-vscode-extension@1.0.7",
				"ms-python.python",
				"pamaron.pytest-runner"
			]
		}
	}
}
